javascript:(function(){if(document.getElementById('mt-custom-fixed'))return;const g=document.createElement('div');g.id='mt-custom-fixed';const tog=document.createElement('div');const savedSld=localStorage.getItem('mt-sld')||'500';const savedLnum=localStorage.getItem('mt-lnum')||'10';Object.assign(tog.style,{position:'fixed',bottom:'10px',right:'10px',width:'40px',height:'40px',background:'#ff4754',borderRadius:'50%',zIndex:'100001',border:'3px solid white',boxShadow:'0 0 10px black',cursor:'pointer'});Object.assign(g.style,{position:'fixed',bottom:'60px',right:'10px',width:'200px',background:'#1b1d1f',color:'#ff4754',padding:'15px',borderRadius:'10px',zIndex:'100000',border:'2px solid #ff4754',fontFamily:'monospace',textAlign:'center',display:'block'});g.innerHTML=`<div style='font-weight:bold;margin-bottom:10px;'>Misg Hub</div><div id='st' style='padding:10px;background:#ca4754;border-radius:4px;color:black;font-weight:bold;cursor:pointer'>OFF</div><div style='font-size:10px;margin:10px 0 5px'>Lines:</div><input type='number' id='l-num' value='${savedLnum}' style='width:50px;background:#2c2e31;border:1px solid #ff4754;color:white;text-align:center'><div style='font-size:10px;margin:10px 0 5px'>Delay (1-5000ms):</div><input type='range' id='s-sld' min='1' max='5000' value='${savedSld}' style='width:100%'><div id='v'>${savedSld}ms</div>`;document.body.appendChild(g);document.body.appendChild(tog);const sld=document.getElementById('s-sld'),val=document.getElementById('v'),lnum=document.getElementById('l-num'),st=document.getElementById('st');let r=false;tog.onclick=()=>{g.style.display=g.style.display==='none'?'block':'none'};sld.oninput=()=>{val.innerText=sld.value+'ms';localStorage.setItem('mt-sld',sld.value)};lnum.oninput=()=>{localStorage.setItem('mt-lnum',lnum.value)};st.onclick=()=>{r=!r;st.innerText=r?'RUNNING':'OFF';st.style.background=r?'#91d18b':'#ca4754';if(r)typeLoop()};const sleep=m=>new Promise(res=>setTimeout(res,m));const typeLoop=async()=>{while(r){const input=document.querySelector('#wordsInput'),active=document.querySelector('.word.active');if(active&&input){const words=Array.from(document.querySelectorAll('.word')),activeIndex=words.indexOf(active),lines=parseInt(lnum.value)||1;let tops=[...new Set(words.slice(activeIndex).map(w=>w.offsetTop))].slice(0,lines);let txt='';for(let i=activeIndex;i<words.length;i++){if(tops.includes(words[i].offsetTop)){let wTxt='';words[i].querySelectorAll('letter').forEach(l=>wTxt+=l.innerText);txt+=wTxt+' '}else if(words[i].offsetTop>Math.max(...tops))break}input.value=txt;input.dispatchEvent(new InputEvent('input',{bubbles:true,data:txt,inputType:'insertText'}));input.value='';await sleep(parseInt(sld.value))}else{await sleep(100)}}}})();
